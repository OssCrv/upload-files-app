<div class="modal fade" id="addTaskModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Tarea</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="tasks/create" method="POST">
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Nombre del tarea</label>
                        <input type="text" class="form-control" id="recipient-name" name="task_name"
                            placeholder="Ej: Primer taller" required>
                    </div>
                    <div class="mb-3">
                            <label for="inputCourse">Curso</label>
                            <select id="inputCourse" class="form-control", name="course_name">
                                <option selected>Escoger...</option>
                                <% for(let course of courses) { %>                        
                                    <option><%= course %></option>
                                <% } %>
                            </select>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <input type="submit" class="btn btn-primary" value="Enviar">
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>